# Service basics
APP_NAME=ohlcv-backend
APP_VERSION=0.1.0-dev
SERVICE_HOST=0.0.0.0
SERVICE_PORT=8000

# Database / Timescale (Supabase Postgres)
DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:54322/postgres
TIMESCALE_ENABLED=true

# Supabase auth + service role
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_JWT_AUDIENCE=authenticated
SUPABASE_JWT_ISSUER=https://your-project-id.supabase.co/auth/v1
SUPABASE_JWKS_URL=
SUPABASE_JWKS_PATH=/auth/v1/jwks
SUPABASE_JWT_CACHE_TTL=900

# Fixed asset universe (10 assets v1)
ASSET_SYMBOLS=BTC,ETH,SOL,USDC,USDT,AAVE,LINK,DOGE,BNB,XRP

# Vendor API (placeholder, configure per environment)
VENDOR_API_BASE_URL=https://api.vendor.example
VENDOR_API_KEY=your-vendor-api-key
VENDOR_TIMEOUT_SECONDS=10
VENDOR_RATE_LIMIT_RPS=5

# Ingestion/backfill behavior
INGESTION_DEFAULT_INTERVAL=day
INGESTION_MAX_RETRIES=5
INGESTION_RETRY_BASE_SECONDS=2
INGESTION_CONCURRENCY=4
FRESHNESS_THRESHOLD_MINUTES=60
FRESHNESS_EVAL_MINUTES=10

# Email alerts
ALERT_EMAIL_FROM=alerts@example.com
ALERT_EMAIL_TO=alerts@blockbuilders.tech
ALERT_SUBJECT_PREFIX=[OHLCV]
STATUS_PAGE_URL=http://localhost:3000/status

# Datadog telemetry
DATADOG_SITE=datadoghq.com
DATADOG_API_KEY=your-datadog-api-key
DATADOG_APP_KEY=your-datadog-app-key
DATADOG_FORWARDER_SOURCE=ohlcv-ingestion
